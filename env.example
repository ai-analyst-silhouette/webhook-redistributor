# ===================================
# WEBHOOK REDISTRIBUTOR - ENV CONFIG
# ===================================

# ============
# SERVER CONFIG
# ============
NODE_ENV=production
PORT=3001

# ============
# JWT CONFIG
# ============
JWT_SECRET=your-super-secret-jwt-key-here

# ============
# POSTGRESQL CONFIG
# ============
POSTGRES_HOST=postgressql.silhouetteexperts.com.br
POSTGRES_DB=redistribuidor_webhooks
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_PORT=5432
POSTGRES_SSL=true

# PostgreSQL Pool Settings
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# ============
# FRONTEND CONFIG (for CORS)
# ============
FRONTEND_URL=https://redistribuidor-front.silhouetteexperts.com.br

# ============
# WEBHOOK SETTINGS
# ============
WEBHOOK_TIMEOUT=5000
MAX_RETRIES=3

# ============
# LOGGING
# ============
LOG_LEVEL=info

# ============
# REACT APP CONFIG (frontend only)
# ============
REACT_APP_API_URL=https://redistribuidor-back.silhouetteexperts.com.br
REACT_APP_FRONTEND_URL=https://redistribuidor-front.silhouetteexperts.com.br
REACT_APP_VERSION=1.0.0
